%tr
  %td= initiative.id
  %td= initiative.title
  %td= initiative.representative.try(:name)
  %td= initiative.presented_at.to_date.to_s(:long)
  %td
    = link_to 'Edicion rapida', '#', class: 'btn btn-primary btn-mini quick-edition', 'data-initiative-id' => initiative.id
    = link_to 'Editar', edit_admin_initiative_path(initiative), class: 'btn btn-primary btn-mini'
    = (initiative.main)? 'Principal' : link_to('Principal', admin_initiative_main_path(initiative), :method => :post, class: 'btn btn-primary btn-mini')
    = link_to 'Borrar', admin_initiative_path(initiative), :method => :delete, :confirm => 'Â¿Esta seguro que desea eliminar la iniciativa?', class: 'btn btn-danger btn-mini'